# .env 配置文件
USE_DEMO=true                    # 使用测试网(模拟盘)
STRATEGY_NAME=supertrend         # 匹配回测策略
CONTRACT_SYMBOLS=BTC/USDC:USDC,ETH/USDC:USDC  # 多品种交易
TIMEFRAME=5m                    # 匹配回测周期

# 币安测试网API凭证(需要先注册获取)
BINANCE_API_KEY=your_testnet_api_key
BINANCE_SECRET=your_testnet_secret

# 仓位管理 - 固定数量模式
POSITION_SIZING_MODE=fixed
POSITION_SIZE_PCT=0.5          # 固定模式下此参数无效

# 固定下单数量（每个品种单独设置）
# BTC: 0.005 BTC
# ETH: 0.15 ETH
FIXED_ORDER_SIZE=0.005  # 这个是默认值，会被品种特定配置覆盖
ALLOW_INITIAL_POSITION=true  # 禁用初始仓位，等待信号确认后再开仓

# Maker 开仓配置
MAKER_ORDER_ENABLED=true          # 启用 Maker 开仓模式
MAKER_MAX_RETRIES=10               # 最大重试次数（超过后改用 Market Order）
MAKER_RETRY_INTERVAL=15           # 重试间隔（秒）
MAKER_MAX_PRICE_DEVIATION=0.005   # 最大价格偏离（0.5%，成交价偏离市价超过此值立即平仓）
MAKER_PRICE_OFFSET_PCT=0.05        # 价格偏移量（0.05%，确保订单成为Maker）

# 风险管理
INITIAL_CAPITAL=500
LEVERAGE=10
MARGIN_MODE=cross
POSITION_MODE=hedge
DAILY_DRAWDOWN_LIMIT=0.50
OVERALL_DRAWDOWN_LIMIT=0.80

# 止盈止损配置（考虑10倍杠杆）
STOP_LOSS_PCT=0.2           # 1% 账户止损（回测用）
TAKE_PROFIT_PCT=0.4           # 2% 账户止盈（回测用）
USE_TAKE_PROFIT=true
ENABLE_TIME_STOP=true
MAX_POSITION_DURATION_HOURS=12

# Ultimate Scalping策略止盈止损（实盘用，已考虑杠杆）
SCALPING_STOP_LOSS_PCT=0.3     # 0.1% 价格止损 = 1% 账户损失（10倍杠杆）
SCALPING_TAKE_PROFIT_PCT=0.6   # 0.2% 价格止盈 = 2% 账户盈利（10倍杠杆）

# 策略参数(根据您的回测配置)
SELECTION=regime_kmeans
SUPERTREND_MULT=3.0
ATR_LENGTH=5
MIN_MULT=0.8
MAX_MULT=3.5
STEP=0.5