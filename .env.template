# ===== Environment Configuration for Ubuntu Deployment =====
# Copy this file to .env and fill in your actual values
# Usage: The application will automatically load this file

# ===== Strategy Configuration =====
STRATEGY_NAME=ultimate_scalping

# ===== Market Configuration =====
CONTRACT_SYMBOL=BTC/USDT:USDT
TIMEFRAME=30m
FETCH_LIMIT=900

# ===== Trading Configuration =====
FIXED_ORDER_SIZE=0.01
LEVERAGE=10
MARGIN_MODE=cross
POSITION_MODE=hedge

# ===== Position Sizing =====
# Mode: 'fixed' (fixed BTC amount) or 'percentage' (% of equity)
POSITION_SIZING_MODE=percentage
POSITION_SIZE_PCT=0.15  # Use 15% of account equity per trade (for percentage mode)

# ===== Ultimate Scalping Strategy Parameters =====
EMA_FAST_LENGTH=20
EMA_SLOW_LENGTH=50
RSI_LENGTH=14
SUPERTREND_MULT=3.0
ATR_LENGTH=5
SCALPING_TAKE_PROFIT_PCT=3.0
SCALPING_STOP_LOSS_PCT=1.5
SCALPING_REVERSAL_EXIT=true

# ===== Risk Management =====
INITIAL_CAPITAL=500
RISK_PER_TRADE=0.1
DAILY_DRAWDOWN_LIMIT=0.10
OVERALL_DRAWDOWN_LIMIT=0.30
STOP_LOSS_PCT=0.5
ALLOW_INITIAL_POSITION=true

# ===== Exchange Configuration =====
USE_DEMO=true
BINANCE_API_KEY=
BINANCE_SECRET=
BINANCE_RECV_WINDOW=5000

# ===== Network Proxy (Optional) =====
HTTP_PROXY=
HTTPS_PROXY=

# ===== Logging Configuration =====
LOG_LEVEL=INFO
CSV_LOG_FILE=trade_log.csv

# ===== Trading Mode =====
MODE=long_short

# ===== Cost Model =====
SLIPPAGE_RATE=0.0001
FEE_RATE=0.0000275
TURNOVER_PENALTY=0.0

# ===== Advanced Parameters =====
SIGNAL_CONFIRM=1
BAND_EPS=0.0005
FACTOR_HOLD_BARS=4
FACTOR_STICKY=0.1
FORCE_FACTOR_RECALC=false
COOLDOWN_LOSS_PCT=0.0
COOLDOWN_LOSS_AMOUNT=3.0
COOLDOWN_DURATION_MINUTES=0

# ===== Multi-Symbol Trading (Optional) =====
# Separate multiple symbols with commas
# Default: BTC/USDC:USDC,ETH/USDC:USDC,SOL/USDC:USDC,BNB/USDC:USDC
CONTRACT_SYMBOLS=BTC/USDC:USDC,ETH/USDC:USDC,SOL/USDC:USDC,BNB/USDC:USDC
