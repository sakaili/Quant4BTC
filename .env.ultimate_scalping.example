# Ultimate Scalping Strategy - Example Configuration
# Copy this to your .env file and adjust parameters as needed

# ===== Strategy Selection =====
STRATEGY_NAME=ultimate_scalping

# ===== Market Configuration =====
CONTRACT_SYMBOL=BTC/USDT:USDT
TIMEFRAME=30m
FETCH_LIMIT=900

# ===== Trading Configuration =====
FIXED_ORDER_SIZE=0.01
LEVERAGE=10
MARGIN_MODE=cross
POSITION_MODE=hedge

# ===== Position Sizing Strategy =====
# Mode: 'fixed' or 'percentage'
POSITION_SIZING_MODE=percentage
POSITION_SIZE_PCT=0.15  # 15% of equity per trade (recommended: 10-20%)

# ===== EMA Parameters =====
EMA_FAST_LENGTH=20
EMA_SLOW_LENGTH=50

# ===== RSI Parameters =====
RSI_LENGTH=14

# ===== SuperTrend Parameters =====
SUPERTREND_MULT=3.0
ATR_LENGTH=5

# ===== Take Profit & Stop Loss =====
SCALPING_TAKE_PROFIT_PCT=3.0
SCALPING_STOP_LOSS_PCT=1.5
SCALPING_REVERSAL_EXIT=true

# ===== Risk Management =====
INITIAL_CAPITAL=500
RISK_PER_TRADE=0.1
DAILY_DRAWDOWN_LIMIT=0.10
OVERALL_DRAWDOWN_LIMIT=0.30
ALLOW_INITIAL_POSITION=false

# ===== Exchange Configuration =====
USE_DEMO=true
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET=your_secret_here
BINANCE_RECV_WINDOW=5000

# ===== Logging =====
LOG_LEVEL=INFO
CSV_LOG_FILE=trade_log_ultimate_scalping.csv

# ===== Network (if needed) =====
# HTTP_PROXY=
# HTTPS_PROXY=

# ===== Trading Mode =====
MODE=long_short

# ===== Cost Model =====
SLIPPAGE_RATE=0.0001
FEE_RATE=0.0000275
